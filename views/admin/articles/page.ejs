<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>

   <div class="container">
    <hr>
   
    <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <br>
    <% }) %>

   
    <div class="row" style="margin-bottom: 60px";>
        <div class="col col-12">
          
            <% if(result.page > 2) {%>
                <a class="btn btn-primary" style="float:left;" href="/articles/page/<%- result.page - 1 %>"> Anterior </a>
            <% } else if (result.page==2) { %>
                <a class="btn btn-danger" style="float:left;" href="/">HomePage</a>
            <% } %>

            <% if(result.next) {%> 
                <a class="btn btn-primary" style="float:right;" href="/articles/page/<%- result.page + 1 %>"> Pr√≥ximo </a>
            <% } %>
        </div>
        <hr>
    </div>


   </div>
</body>

